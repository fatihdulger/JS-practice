function hello(){
  console.log('hello my friend');
 
}
hello();
const hi = setTimeout(hello, 2000);
//run the function hello after 5 seconds has elapsed

console.log(hi); // appears at the end of console

function greet(name, byeText){
    console.log('good Morning, ', name, byeText);
// name = doesnt hold a value
// byeText = doesnt hold a value

}
greet('tim', 'See ya'); // OUTPUT = 'GM' 'TIM', 'SEE YA'

let timeOutID = setTimeout(greet, 5000, 'Mick', 'Good Evening'); // waits 5 seconds GM, TIM
console.log(timeOutID);

clearTimeout(timeOutID);

//clearTimeout
clearTimeout(hi);

